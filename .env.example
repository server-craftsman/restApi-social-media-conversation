# ========================================
# SMARTCHAT API ENVIRONMENT VARIABLES
# ========================================

# ========================================
# APP CONFIGURATION
# ========================================
APP_NAME=SmartChat API
APP_DESCRIPTION=Real-time chat application with AI assistant
APP_VERSION=1.0.0
APP_PREFIX=api
APP_HOST=0.0.0.0
APP_DEBUG=false
APP_FRONTEND_DOMAIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=19102003
DATABASE_NAME=smartchat_db
DATABASE_SYNCHRONIZE=false
DATABASE_MAX_CONNECTIONS=100
DATABASE_SSL_ENABLED=false
DATABASE_REJECT_UNAUTHORIZED=false
DATABASE_CA=
DATABASE_KEY=
DATABASE_CERT=
DATABASE_URL=postgresql://postgres:19102003@localhost:5432/smartchat_db

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=smartchat:
REDIS_RETRY_DELAY_ON_FAILOVER=100
REDIS_MAX_RETRIES_PER_REQUEST=3
REDIS_ENABLE_READY_CHECK=true
REDIS_MAX_MEMORY_POLICY=allkeys-lru
REDIS_MAX_MEMORY=256mb
REDIS_URL=redis://localhost:6379

# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================
AUTH_JWT_SECRET=your-super-secret-jwt-key-change-in-production
AUTH_JWT_TOKEN_EXPIRES_IN=15m
AUTH_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
AUTH_REFRESH_TOKEN_EXPIRES_IN=3650d
AUTH_FORGOT_SECRET=your-super-secret-forgot-key-change-in-production
AUTH_FORGOT_TOKEN_EXPIRES_IN=30m
AUTH_CONFIRM_EMAIL_SECRET=your-super-secret-confirm-email-key-change-in-production
AUTH_CONFIRM_EMAIL_TOKEN_EXPIRES_IN=1d
AUTH_BCRYPT_SALT_ROUNDS=12

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.
RATE_LIMIT_STANDARD_HEADERS=true
RATE_LIMIT_LEGACY_HEADERS=false
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# ========================================
# SECURITY CONFIGURATION
# ========================================
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true
HELMET_ENABLED=true
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_CROSS_ORIGIN_EMBEDDER_POLICY=true
CSRF_ENABLED=false
CSRF_COOKIE=false

# ========================================
# MAIL CONFIGURATION
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_EMAIL=noreply@smartchat.com
MAIL_DEFAULT_NAME=SmartChat
MAIL_IGNORE_TLS=false
MAIL_REQUIRE_TLS=true

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_ENABLE_REQUEST_LOGGING=true
LOG_ENABLE_ERROR_LOGGING=true

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_TTL=300
CACHE_MAX=100
CACHE_CHECK_PERIOD=600

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
WS_CORS_ORIGIN=*
WS_CORS_CREDENTIALS=true
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000

